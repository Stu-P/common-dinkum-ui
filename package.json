{
  "name": "common-dinkum-ui",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.js",
  "scripts": {
    "test": "./node_modules/.bin/mocha --opts mocha.opts",
    "clean": "rm -rf dist",
    "lint:js": "eslint \"src/**/*.js\"",
    "storybook": "start-storybook -p 6006",
    "loki:update": "loki update",
    "loki:test": "loki test",
    "loki:approve": "loki approve",
    "coverage": "node_modules/.bin/nyc --reporter=lcov --require babel-core/register node_modules/.bin/mocha  --opts mocha.opts",
    "build-storybook": "build-storybook",
    "build": "npm run clean; npm run build:webpack",
    "build:webpack": "cross-env NODE_ENV=production webpack --config webpack.config.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "babel-core": "^6.26.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-loader": "^2.4.2"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^3.3.3",
    "@storybook/addon-links": "^3.3.3",
    "@storybook/react": "^3.3.3",
    "babel-eslint": "^8.2.1",
    "babel-plugin-istanbul": "^4.1.4",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "chai": "~3.5.0",
    "chai-as-promised": "~7.1.1",
    "chai-enzyme": "~0.5.0",
    "cross-env": "~5.0.0",
    "css-loader": "^0.28.7",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.6.1",
    "eslint-plugin-react": "^7.3.0",
    "ignore-styles": "^5.0.1",
    "istanbul": "^0.4.5",
    "less": "^2.5.3",
    "less-loader": "^2.2.1",
    "loki": "^0.8.0",
    "mocha": "^2.5.3",
    "nyc": "^11.1.0",
    "react-addons-test-utils": "^15.6.2",
    "react-hot-loader": "^3.1.3",
    "sinon-chai": "^2.14.0",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.7.1"
  },
  "loki": {
    "configurations": {
      "chrome.laptop": {
        "target": "chrome.docker",
        "width": 1366,
        "height": 768,
        "deviceScaleFactor": 1,
        "mobile": false,
        "fitWindow": false
      },
      "chrome.iphone7": {
        "target": "chrome.docker",
        "preset": "iPhone 7"
      }
    }
  },
  "nyc": {
    "reporter": [
      "json-summary",
      "text-summary",
      "html"
    ],
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "src/**/*.spec.js"
    ],
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false,
    "lines": 80,
    "watermarks": {
      "lines": [
        80,
        95
      ]
    },
    "check-coverage": true,
    "per-file": true,
    "cache": true
  }
}
